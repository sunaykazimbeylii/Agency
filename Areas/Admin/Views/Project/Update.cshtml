@using Agency.Models
@using Agency.ViewModes.ProjectVM
@model UpdateProjectVM
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update</h4>     
                <form asp-action="Update" enctype="multipart/form-data" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <input type="hidden" asp-for="Image" class="form-control">
                
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo">Photo</label>
                        <input asp-for="Photo" class="form-control">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Name</label>
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId">Category</label>

                        <select asp-for="CategoryId" class="form-control">
                            @foreach (Category category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }

                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

